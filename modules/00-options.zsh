setopt vi                       # vi mode
setopt autocd                   # cd with only path
setopt auto_list                # list choices on ambiguous completion
setopt auto_menu                # automatically use menu completion
setopt always_to_end            # go to end if only one match
setopt append_history           # parallel shells have new entries
setopt hist_expire_dups_first   # trim duplicate events
setopt hist_ignore_space        # ignore commands that begin with space
setopt inc_append_history       # add entries when they are entered
setopt share_history            # import new commands from history
